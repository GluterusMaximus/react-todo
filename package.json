{
  "name": "react-todo",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple todo app built with react and express",
  "main": "server.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "server": "nodemon backend/server",
    "client": "npm run start --prefix frontend",
    "dev": "concurrently --kill-others \"npm run server\" \"npm run client\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GluterusMaximus/react-todo.git"
  },
  "keywords": [
    "TODO",
    "time",
    "management",
    "deadlines"
  ],
  "author": "Grigoriy Ustymenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GluterusMaximus/react-todo/issues"
  },
  "homepage": "https://github.com/GluterusMaximus/react-todo#readme",
  "devDependencies": {
    "concurrently": "^7.2.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.5",
    "nodemailer": "^6.7.5",
    "uuid": "^8.3.2"
  }
}
